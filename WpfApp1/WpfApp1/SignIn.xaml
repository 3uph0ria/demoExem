<Page x:Class="WpfApp1.SignIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignIn">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Войдите в аккаунт"  Grid.Row="0" Margin="24,19,28,19" Width="748" Grid.ColumnSpan="2"/>
        <TextBlock Text="Логин"  Grid.Row="1"></TextBlock>
        <TextBlock Text="Пароль" Grid.Row="2" Grid.Column="0"></TextBlock>
        <TextBox x:Name="Login" Grid.Row="1" Grid.Column="1" Height="93" Margin="26,10,28,10" Width="546"></TextBox>
        <TextBox x:Name="Password" Grid.Row="2" Grid.Column="1" Height="83" Margin="26,10,28,19" Width="546"></TextBox>
        <Button Content="Войти" Grid.Row="3" Grid.ColumnSpan="2" Click="ButSingIn_Click"></Button>
    </Grid>
</Page>
